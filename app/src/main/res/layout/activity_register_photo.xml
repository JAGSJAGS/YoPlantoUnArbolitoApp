<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="app.yo_planto.yoplantounarbolito_app.register_photo_activity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_blue"
            android:layout_margin="16dp">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tome una fotografÃ­a del arbolito o elija una de su galeria."
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:id="@+id/text_view_indicaciones" app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="center" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
                style="@style/title_1"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_view_errors_register_photo"
                app:layout_constraintTop_toBottomOf="@+id/text_view_indicaciones"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                style="@style/text_3"/>

        <Button
            android:id="@+id/btn_cargar_img"
            style="@style/text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_1"
            android:onClick="onclick"
            android:text="Selecciona Imagen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/photo_tree"
                android:layout_below="@+id/text_view_indicaciones"
                android:layout_alignRight="@+id/text_view_indicaciones"
                android:layout_alignEnd="@+id/text_view_indicaciones"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_errors_register_photo"
                android:layout_height="400dp" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"/>
        <Button
                android:onClick="on_click_save_photo"
                android:text="Guardar Photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button_save_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toBottomOf="@+id/photo_tree"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/text_2"
                android:background="@drawable/button_1"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/load_photo"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Guardando, espere ...."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_view_load_photo"
                app:layout_constraintTop_toBottomOf="@+id/load_photo" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="20sp"
                android:textStyle="bold" style="@style/text_2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>