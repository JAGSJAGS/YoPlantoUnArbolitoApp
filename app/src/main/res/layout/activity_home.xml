                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.button.MaterialButton
                                android:text="Tu arbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/button_home_your_tree"
                                android:layout_marginBottom="8dp"
                                app:backgroundTint="@null"
                                android:background="@drawable/button_1"/>
                        <com.google.android.material.button.MaterialButton
                                android:text="Orfanato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/button_home_orphanage"
                                android:layout_marginBottom="8dp"
                                app:backgroundTint="@null"
                                android:background="@drawable/button_1"/>
                        <com.google.android.material.button.MaterialButton
                                android:text="Ranking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/button_home_ranking"
                                android:layout_marginBottom="8dp"
                                app:backgroundTint="@null"
                                android:background="@drawable/button_1"/>
                        <com.google.android.material.button.MaterialButton
                                android:text="games"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/button_home_games"
                                android:layout_marginBottom="8dp"
                                app:backgroundTint="@null"
                                android:background="@drawable/button_1"/>
                        <com.google.android.material.button.MaterialButton
                                android:text="Perfil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/button_home_profile"
                                android:layout_marginBottom="8dp"
                                app:backgroundTint="@null"
                                android:background="@drawable/button_1"/>
                        <com.google.android.material.button.MaterialButton
                                android:text="Registrar Arbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/button_home_register_tree"
                                android:layout_marginBottom="8dp"
                                app:backgroundTint="@null"
                                android:background="@drawable/button_1"/>

