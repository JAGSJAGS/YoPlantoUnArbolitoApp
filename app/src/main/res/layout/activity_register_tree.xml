<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="app.yo_planto.yoplantounarbolito_app.register_tree_activity"
        android:orientation="vertical" android:background="@drawable/backgroun_black_ligth_two">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/backgroun_black_ligth"
                    android:layout_margin="16dp">
                <TextView
                        android:text="Registre su arbolito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_title_register"
                        android:layout_marginTop="32dp"
                        android:layout_gravity="center" style="@style/title_1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_errors_register_three"
                        map:layout_constraintStart_toStartOf="parent"
                        map:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="#F44336"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_title_register"
                        android:layout_marginTop="8dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="arbolName"
                        android:ems="10"
                        android:id="@+id/edit_text_name_register_tree"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/edit_text_1"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_errors_register_three"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center" style="@style/text_1"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="16dp"
                        android:background="@drawable/backgroun_black_ligth_two">
                    <TextView
                            android:text="Seleccione un personaje:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_view_character_selection"
                            android:textAlignment="textStart"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp" style="@style/text_2"/>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="16dp"
                            android:layout_gravity="center">
                        <ImageButton
                                android:onClick="OnclickSelectAvatar2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                map:srcCompat="@mipmap/avatar_one_sad"
                                android:id="@+id/image_button_one"
                                tools:ignore="OnClick"
                                android:layout_marginEnd="16dp" android:background="@drawable/edit_text_1"/>
                        <ImageButton
                                android:onClick="OnclickSelectAvatar1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                map:srcCompat="@mipmap/avatar_one_sad"
                                android:id="@+id/image_button_two"
                                android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                        android:text="Registrar Arbolito"
                        android:onClick="OnclickRegisterTree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_register_user"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_1"
                        android:layout_marginTop="16dp" style="@style/text_2"
                        android:layout_marginBottom="16dp"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:background="@drawable/backgroun_red" android:paddingBottom="16dp">
                <TextView
                        android:text="La ubicación del arbolito se registrará como la que se ve en el mapa."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view_map_advise"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/image_button_one"
                        android:layout_marginTop="16dp" style="@style/text_3"/>
                <fragment
                        android:id="@+id/map1"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        map:cameraZoom="10"
                        map:uiRotateGestures="true"
                        map:uiZoomControls="true"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>