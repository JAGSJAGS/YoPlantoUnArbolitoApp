<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="app.yo_planto.yoplantounarbolito_app.TreeCareActivity"
        android:orientation="vertical">


    <Button
            android:text="Regar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button_regar"/>
    <Button
            android:text="Limpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button_limpiar"/>
    <Button
            android:text="Abonar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button_abonar"/>
    <Button
            android:text="Establecido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button_establecido"/>
</LinearLayout>